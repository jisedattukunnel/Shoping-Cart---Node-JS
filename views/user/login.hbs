<div class="row">
    <div class="col-md-6 m-auto">
<div class="container mt-5 pl-5">
  <h2 class="text-center" style="margin-bottom:50px">Log in</h2>
  <form action="/login" method="POST">
    <div class="form-group">
      {{!-- <label for="email">Email:</label> --}}
      <input type="email" class="form-control" id="email" placeholder="Enter email" value="jis@email.com" name="Email">
    </div>
    <div class="form-group">
         {{!-- <label for="pwd">Password:</label> --}}
      <input type="password" class="form-control" id="pwd" placeholder="Enter password" value="123" name="Password">
    </div>
    {{#if loginErr}}
    <div class="error">
        <p style="color:red">Invalid username or password</p>
    </div>

    {{else}}
    <div class="noerror">
        <p>&nbsp</p>
    </div>

    {{/if}}
    <div class="form-group form-check">
      New to E-Store ? <a href="/signup">Create new account</a>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
</div>
</div>