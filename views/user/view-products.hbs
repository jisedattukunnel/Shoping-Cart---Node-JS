<section>

  <div class="container mt-5">
    <div class="row">

    {{#each products}}

      <div class="col-md-3 p-3">
        <div class="card view" style="width: 15rem; height:25rem">
            <img class="card-img-top " 
                src="/product-images/{{this._id}}.jpg" 
                alt="Card image cap"
                    style="height:15rem">
            <div class="card-body">
              <h5 class="card-title">{{this.Name}}</h5>
                <p class="card-text">{{this.Description}}</p>
                <a href="/display-product" class="btn btn-primary">View</a>
                <a href="/add-to-cart/{{this._id}}" class="btn btn-success">Add to cart</a>
            </div>
          </div>
        </div>
    {{/each}}
  </div>
</section>





